{
  "cSpell.words": [
    "codeql",
    "jsnext",
    "libm",
    "Optionsinitializer",
    "pinst",
    "pjson",
    "rollup",
    "snyk",
    "systemjs",
    "tada"
  ],
  "eslint.enable": true,
  "javascript.validate.enable": false,
  "json.schemas": [
    {
      "fileMatch": [
        "tsconfig.*.json"
      ],
      "url": "http://json.schemastore.org/tsconfig"
    }
  ],
  "search.exclude": {
    "**/*.code-search": true,
    "**/bower_components": true,
    "**/dist": true,
    "**/lib": true,
    "**/libm": true,
    "**/node_modules": true
  },
  "typescript.tsdk": "node_modules/typescript/lib"
}
