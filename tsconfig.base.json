{
  "compilerOptions": {
    "declaration": true,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": [
      "es2015"
    ],
    "module": "commonjs",
    "moduleResolution": "node",
    "newLine": "LF",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "removeComments": false,
    "sourceMap": true,
    "strict": true
  },
  "exclude": [
    "*.js.flow"
  ],
  "include": [
    "typings"
  ],
  "files": [
    "src/index.ts"
  ]
}
