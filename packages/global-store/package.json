{
  "name": "global-store",
  "version": "1.0.0-beta.21",
  "description": "A library provides version stable stores for libraries.",
  "homepage": "https://github.com/unional/global-store",
  "bugs": {
    "url": "https://github.com/unional/global-store/issues"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/unional/global-store.git"
  },
  "license": "MIT",
  "author": {
    "name": "Homa Wong",
    "email": "homawong@gmail.com"
  },
  "type": "module",
  "exports": {
    "import": {
      "types": "./esm/index.d.ts",
      "default": "./esm/index.js"
    },
    "require": {
      "types": "./cjs/index.d.ts",
      "default": "./cjs/index.js"
    }
  },
  "main": "./cjs/index.js",
  "module": "./esm/index.js",
  "types": "./esm/index.d.ts",
  "files": [
    "dist",
    "esm",
    "index.js.flow",
    "!**/*.spec.*"
  ],
  "scripts": {
    "build": "run-p build:* bundle",
    "build:cjs": "buddy ts build cjs",
    "build:esm": "tsc",
    "build:tslib": "buddy ts build tslib",
    "bundle": "rollup -c rollup.config.mjs",
    "clean": "rimraf cjs coverage dist esm lib tslib --glob *.tsbuildinfo",
    "coverage": "jest --coverage",
    "cs": "changeset",
    "depcheck": "depcheck",
    "lint": "eslint --ext=js,ts .",
    "size": "size-limit",
    "test": "jest",
    "version": "changeset version",
    "verify": "npm-run-all clean -p build lint depcheck coverage -p size"
  },
  "devDependencies": {
    "@babel/core": "^7.21.4",
    "@babel/plugin-syntax-flow": "^7.21.4",
    "@babel/plugin-transform-react-jsx": "^7.21.0",
    "@rollup/plugin-typescript": "^11.1.0",
    "@size-limit/preset-small-lib": "^8.2.4",
    "@jest/globals": "^29.5.0",
    "@repobuddy/jest": "^3.3.0",
    "@repobuddy/typescript": "^1.1.1",
    "assertron": "^11.2.1",
    "cross-env": "^7.0.3",
    "depcheck": "^1.4.3",
    "jest": "^29.5.0",
    "jest-validate": "^29.5.0",
    "jest-watch-suspend": "^1.1.2",
    "jest-watch-toggle-config-2": "^2.1.0",
    "jest-watch-typeahead": "^2.2.2",
    "npm-run-all": "^4.1.5",
    "repobuddy": "^1.0.1",
    "rimraf": "^5.0.0",
    "rollup": "^2.79.1",
    "rollup-plugin-terser": "^7.0.2",
    "size-limit": "^8.2.4",
    "ts-jest": "^29.1.0",
    "tslib": "^2.5.0",
    "type-plus": "^6.6.0",
    "typescript": "5.0.4"
  }
}