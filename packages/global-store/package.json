{
	"name": "global-store",
	"version": "1.0.0-beta.22",
	"description": "A library provides version stable stores for libraries.",
	"homepage": "https://github.com/unional/global-store",
	"bugs": {
		"url": "https://github.com/unional/global-store/issues"
	},
	"repository": {
		"type": "git",
		"url": "git://github.com/unional/global-store.git"
	},
	"license": "MIT",
	"author": {
		"name": "Homa Wong",
		"email": "homawong@gmail.com"
	},
	"sideEffects": true,
	"type": "module",
	"exports": "./lib/index.js",
	"types": "./lib/index.d.ts",
	"files": [
		"dist",
		"lib",
		"index.js.flow",
		"!**/*.spec.*"
	],
	"scripts": {
		"build": "run-p build:ts bundle",
		"build:ts": "tsc",
		"bundle": "rollup -c rollup.config.mjs",
		"clean": "rimraf cjs coverage dist esm tslib lib libm --glob *.tsbuildinfo",
		"coverage": "jest --coverage",
		"depcheck": "depcheck",
		"size": "size-limit",
		"test": "jest",
		"test:watch": "jest --watch",
		"verify": "npm-run-all clean -p build lint depcheck coverage -p size",
		"w": "pnpm test:watch"
	},
	"devDependencies": {
		"@babel/core": "^7.18.10",
		"@repobuddy/jest": "^4.0.0",
		"@rollup/plugin-typescript": "^11.0.0",
		"@size-limit/preset-small-lib": "^8.0.1",
		"@types/jest": "^29.5.1",
		"assertron": "^11.0.0",
		"depcheck": "^1.4.3",
		"jest": "^29.5.0",
		"jest-junit": "^16.0.0",
		"jest-watch-suspend": "^1.1.2",
		"jest-watch-toggle-config-2": "^2.1.0",
		"jest-watch-typeahead": "^2.2.2",
		"npm-run-all": "^4.1.5",
		"rimraf": "^5.0.0",
		"rollup": "^2.78.0",
		"rollup-plugin-terser": "^7.0.2",
		"size-limit": "^8.0.1",
		"ts-jest": "^29.1.0",
		"tslib": "^2.4.0",
		"type-plus": "^6.0.0",
		"typescript": "5.0.4"
	},
	"size-limit": [
		{
			"path": "./lib/index.js",
			"limit": "2 KB"
		}
	]
}
