{
  "name": "global-store",
  "version": "1.0.0-beta.21",
  "description": "A library provides version stable stores for libraries.",
  "homepage": "https://github.com/unional/global-store",
  "bugs": {
    "url": "https://github.com/unional/global-store/issues"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/unional/global-store.git"
  },
  "license": "MIT",
  "author": {
    "name": "Homa Wong",
    "email": "homawong@gmail.com"
  },
  "type": "module",
  "exports": "./lib/index.js",
  "types": "./lib/index.d.ts",
  "files": [
    "dist",
    "lib",
    "index.js.flow",
    "!**/*.spec.*"
  ],
  "scripts": {
    "build": "run-p build:ts bundle",
    "build:ts": "tsc",
    "bundle": "rollup -c rollup.config.mjs",
    "clean": "rimraf dist lib libm || true",
    "coverage": "jest --coverage",
    "cs": "changeset",
    "depcheck": "depcheck",
    "lint": "eslint --ext=js,ts .",
    "size": "size-limit",
    "test": "jest",
    "version": "changeset version",
    "verify": "npm-run-all clean -p build lint depcheck coverage -p size"
  },
  "devDependencies": {
    "@babel/core": "^7.18.10",
    "@babel/plugin-syntax-flow": "^7.18.6",
    "@babel/plugin-transform-react-jsx": "^7.18.10",
    "@rollup/plugin-typescript": "^8.3.4",
    "@size-limit/preset-small-lib": "^8.0.1",
    "@types/jest": "^28.1.7",
    "@typescript-eslint/eslint-plugin": "^5.33.1",
    "@typescript-eslint/parser": "^5.33.1",
    "assertron": "^10.0.0",
    "depcheck": "^1.4.3",
    "eslint": "^8.22.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-flowtype": "^8.0.3",
    "eslint-plugin-harmony": "^7.1.0",
    "jest": "^28.1.3",
    "jest-junit": "^14.0.0",
    "jest-validate": "^28.1.3",
    "jest-watch-suspend": "^1.1.2",
    "jest-watch-toggle-config": "^2.0.1",
    "jest-watch-typeahead": "^2.0.0",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.2",
    "rollup": "^2.78.0",
    "rollup-plugin-terser": "^7.0.2",
    "size-limit": "^8.0.1",
    "ts-jest": "^28.0.8",
    "tslib": "^2.4.0",
    "type-plus": "^4.11.1",
    "typescript": "4.7.4"
  },
  "size-limit": [
    {
      "path": "./lib/index.js",
      "limit": "2 KB"
    }
  ]
}
