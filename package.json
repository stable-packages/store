{
  "name": "global-store",
  "version": "1.0.0-beta.19",
  "description": "A library provides version stable stores for libraries.",
  "homepage": "https://github.com/unional/global-store",
  "bugs": {
    "url": "https://github.com/unional/global-store/issues"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/unional/global-store.git"
  },
  "license": "MIT",
  "author": {
    "name": "Homa Wong",
    "email": "homawong@gmail.com"
  },
  "main": "lib/index.js",
  "module": "libm/index.js",
  "jsnext:main": "libm/index.js",
  "types": "libm/index.d.ts",
  "files": [
    "dist",
    "lib",
    "libm",
    "index.js.flow",
    "ts"
  ],
  "scripts": {
    "build": "run-p build:es5 build:esnext bundle",
    "build:es5": "tsc -p tsconfig.es5.json",
    "build:esnext": "tsc -p tsconfig.esnext.json",
    "bundle": "run-p bundle:webpack bundle:rollup",
    "bundle:webpack": "webpack",
    "bundle:rollup": "rollup -c rollup.config.mjs",
    "clean": "rimraf dist lib libm",
    "coverage": "jest --coverage",
    "cs": "changeset",
    "depcheck": "depcheck",
    "lint": "eslint --ext=js,ts .",
    "postinstall": "husky install",
    "prepack": "pinst --disable",
    "postpack": "pinst --enable",
    "size": "size-limit",
    "test": "jest",
    "test:watch": "jest --watch",
    "verify": "npm-run-all clean -p build:es5 build:esnext -p size bundle lint depcheck coverage",
    "watch": "yarn test:watch"
  },
  "devDependencies": {
    "@babel/core": "^7.16.7",
    "@babel/preset-env": "^7.16.7",
    "@babel/preset-typescript": "^7.16.7",
    "@changesets/cli": "^2.22.0",
    "@commitlint/cli": "^16.0.1",
    "@commitlint/config-conventional": "^16.0.0",
    "@size-limit/preset-small-lib": "^7.0.5",
    "@types/jest": "^27.4.0",
    "@typescript-eslint/eslint-plugin": "^5.23.0",
    "assertron": "^9.0.0",
    "depcheck": "^1.4.3",
    "eslint": "^8.6.0",
    "eslint-plugin-flowtype": "^8.0.3",
    "eslint-plugin-harmony": "^7.0.2",
    "husky": "^8.0.1",
    "jest": "^28.0.0",
    "jest-junit": "^13.0.0",
    "jest-validate": "^28.0.0",
    "jest-watch-suspend": "^1.1.2",
    "jest-watch-toggle-config": "^2.0.1",
    "jest-watch-typeahead": "^1.0.0",
    "npm-run-all": "^4.1.5",
    "param-case": "^3.0.4",
    "pascal-case": "^3.1.2",
    "pinst": "^3.0.0",
    "rimraf": "^3.0.0",
    "rollup": "^2.60.2",
    "rollup-plugin-typescript2": "^0.31.1",
    "size-limit": "^7.0.5",
    "ts-loader": "^9.2.6",
    "type-plus": "^4.0.0",
    "typescript": "^4.5.4",
    "webpack": "^5.64.4",
    "webpack-cli": "^4.9.1"
  },
  "size-limit": [
    {
      "limit": "3 KB"
    }
  ],
  "packageManager": "yarn@1.22.18"
}
