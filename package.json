{
  "name": "global-store",
  "description": "A version locked global store.",
  "version": "0.7.3",
  "main": "dist-es5/index.js",
  "module": "dist-es2015/index.js",
  "typings": "dist-es5/index.d.ts",
  "files": [
    "dist",
    "dist-es5",
    "dist-es2015"
  ],
  "scripts": {
    "build": "npm run clean && npm run build-es5 && npm run build-es2015",
    "build-es5": "tsc -p tsconfig.es5.json",
    "build-es2015": "tsc -p tsconfig.es2015.json",
    "bundle": "webpack",
    "clean": "rimraf dist dist-es5 dist-es2015",
    "coverage": "nyc npm test",
    "coveralls": "nyc report --reporter=text-lcov | coveralls",
    "dependency-check": "dependency-check . --unused --no-dev && dependency-check . --missing --no-dev",
    "lint": "tslint -p tsconfig.json 'src/**/*.ts'",
    "postpublish": "git push",
    "prepublishOnly": "npm run build && npm run bundle",
    "preversion": "git pull && npm run verify",
    "test": "npm run clean && tsc && ava",
    "verify": "npm run lint && npm run coverage && npm run prepublishOnly && npm run dependency-check",
    "watch": "npm run clean && node scripts/watch.js"
  },
  "author": {
    "name": "Homa Wong",
    "email": "homawong@gmail.com"
  },
  "homepage": "https://github.com/unional/global-store",
  "bugs": {
    "url": "https://github.com/unional/global-store/issues"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/unional/global-store.git"
  },
  "license": "MIT",
  "ava": {
    "files": [
      "dist-es5/**/*.spec.js"
    ],
    "source": [
      "scripts/*.js",
      "dist-es5/**/*.js",
      "*.json"
    ]
  },
  "nyc": {
    "exclude": [
      "scripts",
      "**/*.spec.*",
      "**/fixtures/**/*"
    ]
  },
  "devDependencies": {
    "aurelia-logging": "^1.4.0",
    "aurelia-polyfills": "^1.3.0",
    "ava": "^0.25.0",
    "dependency-check": "^3.1.0",
    "eslint": "^5.0.0",
    "eslint-plugin-harmony": "^1.0.3",
    "nyc": "^12.0.2",
    "param-case": "^2.1.1",
    "pascal-case": "^2.0.1",
    "rimraf": "^2.6.2",
    "source-map-loader": "^0.2.3",
    "ts-loader": "^4.0.1",
    "tslint": "^5.9.1",
    "tslint-config-unional": "^0.10.0",
    "typescript": "^2.7.2",
    "uglifyjs-webpack-plugin": "^1.2.3",
    "webpack": "^4.1.1",
    "webpack-cli": "^3.0.8"
  }
}
