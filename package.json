{
  "name": "global-store",
  "version": "1.0.0-beta.21",
  "description": "A library provides version stable stores for libraries.",
  "homepage": "https://github.com/unional/global-store",
  "bugs": {
    "url": "https://github.com/unional/global-store/issues"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/unional/global-store.git"
  },
  "license": "MIT",
  "author": {
    "name": "Homa Wong",
    "email": "homawong@gmail.com"
  },
  "type": "module",
  "exports": {
    "import": {
      "types": "./lib/index.d.ts",
      "default": "./lib/index.js"
    }
  },
  "types": "./lib/index.d.ts",
  "files": [
    "dist",
    "lib",
    "index.js.flow"
  ],
  "scripts": {
    "build": "run-p build:ts bundle",
    "build:ts": "tsc -p tsconfig.build.json",
    "bundle": "rollup -c rollup.config.mjs",
    "bundle:webpack": "webpack",
    "bundle:rollup": "rollup -c rollup.config.mjs",
    "clean": "rimraf dist lib libm || true",
    "coverage": "jest --coverage",
    "cs": "changeset",
    "depcheck": "depcheck",
    "lint": "eslint --ext=js,ts .",
    "postinstall": "husky install",
    "prepack": "pinst --disable",
    "postpack": "pinst --enable",
    "size": "size-limit",
    "test": "jest",
    "test:types": "tsc",
    "test:watch": "jest --watch",
    "verify": "npm-run-all clean -p build:ts bundle lint depcheck coverage test:types -p size",
    "watch": "yarn test:watch"
  },
  "devDependencies": {
    "@changesets/cli": "^2.22.0",
    "@commitlint/cli": "^17.0.2",
    "@commitlint/config-conventional": "^17.0.2",
    "@rollup/plugin-typescript": "^8.3.2",
    "@size-limit/preset-small-lib": "^7.0.8",
    "@types/jest": "^28.1.1",
    "@typescript-eslint/eslint-plugin": "^5.27.0",
    "assertron": "^9.2.3",
    "depcheck": "^1.4.3",
    "eslint": "^8.17.0",
    "eslint-plugin-flowtype": "^8.0.3",
    "eslint-plugin-harmony": "^7.1.0",
    "husky": "^8.0.1",
    "jest": "^28.1.0",
    "jest-junit": "^13.2.0",
    "jest-validate": "^28.1.0",
    "jest-watch-suspend": "^1.1.2",
    "jest-watch-toggle-config": "^2.0.1",
    "jest-watch-typeahead": "^1.1.0",
    "npm-run-all": "^4.1.5",
    "pinst": "^3.0.0",
    "rimraf": "^3.0.2",
    "rollup": "^2.75.5",
    "size-limit": "^7.0.8",
    "ts-jest": "^28.0.4",
    "tslib": "^2.4.0",
    "type-plus": "^4.10.0",
    "typescript": "4.7.4"
  },
  "packageManager": "yarn@3.2.1",
  "size-limit": [
    {
      "path": "./lib/index.js",
      "limit": "2 KB"
    }
  ]
}
