{
  "compilerOptions": {
    "declaration": true,
    "esModuleInterop": true,
    "inlineSources": true,
    "lib": [
      "ES2015"
    ],
    "module": "Node16",
    "moduleResolution": "Node16",
    "newLine": "LF",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "lib",
    "removeComments": false,
    "sourceMap": true,
    "strict": true,
    "target": "ES2020"
  },
  "include": [
    "typings"
  ],
  "files": [
    "ts/index.ts"
  ]
}
